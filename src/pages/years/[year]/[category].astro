---
import BaseLayout from "../../../layout/BaseLayout.astro";
import CategoryContent from "../../../components/CategoryContent";

export async function getStaticPaths() {
  // Fetch years and categories to generate routes - but content loads client-side
  const { getAllYears, getCategoriesForYear } = await import("../../../lib/sanity");
  const years = await getAllYears();
  const paths = [];

  for (const yearData of years) {
    const categories = await getCategoriesForYear(yearData.year.toString());
    for (const category of categories) {
      paths.push({
        params: {
          year: yearData.year.toString(),
          category: category.slug.current,
        },
      });
    }
  }

  return paths;
}

const { year, category } = Astro.params;
const basePath = import.meta.env.BASE_URL.replace(/\/$/, "");

if (!year || !category) {
  return Astro.redirect("/years");
}
---

<BaseLayout title={`${category} - Fyrstikken ${year}`} description={`Prosjekter i kategorien ${category}`}>
  <CategoryContent client:load year={year} category={category} basePath={basePath} />
</BaseLayout>

<style>
  .breadcrumb {
    display: inline;
    text-decoration: none;
    opacity: 0.7;
    transition: opacity 0.2s;
    font-size: 0.95rem;
  }

