---
import BaseLayout from "../../layout/BaseLayout.astro";
import Link from "../../components/Link.astro";
import { getYear, getCategoriesForYear } from "../../lib/sanity";

const { year } = Astro.params;

if (!year) {
  return Astro.redirect("/years");
}

const yearData = await getYear(year);
const categories = await getCategoriesForYear(year);

if (!yearData) {
  return Astro.redirect("/years");
}
---

<BaseLayout title={`Fyrstikken ${yearData.year}`} description={`Kategorier for Fyrstikken ${yearData.year}`}>
  <div slot="pageTitle">
    <Link href="/years" class="breadcrumb">← Tilbake til års</Link>
    <h1>Fyrstikken {yearData.year}</h1>
    {yearData.description && <p class="year-description">{yearData.description}</p>}
  </div>

  {
    categories.length > 0 ? (
      <div class="categories-grid">
        {categories.map((category) => (
          <Link href={`/years/${year}/${category.slug.current}`} class="category-card">
            {category.coverImage && category.coverImage.asset?.url && (
              <img
                src={category.coverImage.asset.url}
                alt={category.coverImage.alt || category.title}
                class="category-image"
              />
            )}
            <div class="category-content">
              <h2>{category.title}</h2>
              {category.description && <p>{category.description}</p>}
            </div>
          </Link>
        ))}
      </div>
    ) : (
      <p>Ingen kategorier funnet for dette året.</p>
    )
  }
</BaseLayout>

<style>
  .breadcrumb {
    display: inline-block;
    margin-bottom: 1rem;
    text-decoration: none;
    opacity: 0.7;
    transition: opacity 0.2s;
    font-size: 0.95rem;
  }

  .breadcrumb:hover {
    opacity: 1;
  }

  .year-description {
    font-size: 1.2rem;
    opacity: 0.85;
    margin-top: 0.75rem;
    font-weight: 400;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .category-card {
    background: light-dark(var(--light-main), var(--dark-main));
    border: 2px solid light-dark(var(--light-ramme), var(--dark-ramme));
    border-radius: 12px;
    text-decoration: none;
    overflow: hidden;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease,
      border-color 0.2s ease;
    color: inherit;
    display: flex;
    flex-direction: column;
  }

  .category-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    border-color: light-dark(var(--light-akvamarin), var(--dark-akvamarin));
  }

  .category-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    background: light-dark(var(--light-tekstBoks), var(--dark-tekstBoks));
  }

  .category-content {
    padding: 1.5rem;
    flex: 1;
  }

  .category-content h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    color: light-dark(var(--light-tekst), var(--dark-tekst));
  }

  .category-content p {
    margin: 0;
    opacity: 0.85;
    line-height: 1.6;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .categories-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
