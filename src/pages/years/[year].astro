---
import BaseLayout from "../../layout/BaseLayout.astro";
import Link from "../../components/Link.astro";
import { getYear, getCategoriesWithProjectsForYear } from "../../lib/sanity";
import type { ICategoryWithProjects } from "../../lib/sanity";

const { year } = Astro.params;

if (!year) {
  return Astro.redirect("/years");
}

const yearData = await getYear(year);
const categoriesWithProjects = await getCategoriesWithProjectsForYear(year);

if (!yearData) {
  return Astro.redirect("/years");
}
---

<BaseLayout title={`Fyrstikken ${yearData.year}`} description={`Kategorier for Fyrstikken ${yearData.year}`}>
  <div slot="pageTitle">
    <Link href="/years" class="breadcrumb">← Tilbake til års</Link>
    <h1>Fyrstikken {yearData.year}</h1>
    {yearData.description && <p class="year-description">{yearData.description}</p>}
  </div>

  {
    categoriesWithProjects.length > 0 ? (
      <div class="year-content">
        {categoriesWithProjects.map((category: ICategoryWithProjects) => (
          <section class="category-section" id={category.slug.current}>
            <div class="category-header">
              <h2 class="category-title">{category.title}</h2>
              {category.description && <p class="category-description">{category.description}</p>}
            </div>

            {category.projects && category.projects.length > 0 && (
              <div class="projects-grid">
                {category.projects.map((project) => (
                  <Link href={`/years/${year}/${category.slug.current}/${project.slug.current}`} class="project-card">
                    {project.image && project.image.asset?.url && (
                      <img
                        src={project.image.asset.url}
                        alt={project.image.alt || project.title}
                        class="project-image"
                      />
                    )}
                    <div class="project-content">
                      <h3>{project.title}</h3>
                      {project.description && <p>{project.description}</p>}
                    </div>
                  </Link>
                ))}
              </div>
            )}
          </section>
        ))}
      </div>
    ) : (
      <p>Ingen kategorier funnet for dette året.</p>
    )
  }
</BaseLayout>

<style>
  .breadcrumb {
    display: inline-block;
    margin-bottom: 1rem;
    text-decoration: none;
    opacity: 0.7;
    transition: opacity 0.2s;
    font-size: 0.95rem;
  }

  .breadcrumb:hover {
    opacity: 1;
  }

  .year-description {
    font-size: 1.2rem;
    opacity: 0.85;
    margin-top: 0.75rem;
    font-weight: 400;
  }

  .year-content {
    margin-top: 2rem;
  }

  .category-section {
    margin-bottom: 4rem;
  }

  .category-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 3px solid light-dark(var(--light-safir), var(--dark-safir));
  }

  .category-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: light-dark(var(--light-tekst), var(--dark-tekst));
  }

  .category-description {
    font-size: 1.1rem;
    opacity: 0.85;
    margin: 0;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .project-card {
    background: light-dark(var(--light-main), var(--dark-main));
    border: 2px solid light-dark(var(--light-ramme), var(--dark-ramme));
    border-radius: 12px;
    text-decoration: none;
    overflow: hidden;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease,
      border-color 0.2s ease;
    color: inherit;
    display: flex;
    flex-direction: column;
  }

  .project-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    border-color: light-dark(var(--light-safir), var(--dark-safir));
  }

  .project-image {
    width: 100%;
    height: 220px;
    object-fit: cover;
    background: light-dark(var(--light-tekstBoks), var(--dark-tekstBoks));
  }

  .project-content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .project-content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    color: light-dark(var(--light-tekst), var(--dark-tekst));
  }

  .project-content p {
    margin: 0;
    opacity: 0.85;
    line-height: 1.6;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .category-title {
      font-size: 1.75rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .category-section {
      margin-bottom: 3rem;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
