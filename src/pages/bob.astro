---
import Card from '../components/Card.astro';

const cardData = [
  { label: '100', path: '/100/' },
  { label: '200', path: '/200/' },
  { label: '300', path: '/300/' },
  { label: '400', path: '/400/' },
  { label: '500', path: '/500/' },
  { label: '600', path: '/600/' },
  { label: '700', path: '/700/' },
  { label: '800', path: '/800/' },
  { label: '900', path: '/900/' },
];
---
<div class="cards">
  {cardData.map(card => (
    <Card {...card} />
  ))}
</div>

<style>
.cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 1rem;
  padding: 2rem;
}
</style>
