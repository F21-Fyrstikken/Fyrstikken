---
import Link from "../components/Link.astro";
import "../css/global.css";
import "../css/typografi.css";
import HeaderImg from "../components/HeaderImg.astro";
import NightDay from "../components/NightDay.astro";
import type { IBaseLayoutProps } from "../types";

const { title = "Fyrstikken", description, image } = Astro.props as IBaseLayoutProps;
const base = import.meta.env.BASE_URL;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site ?? "https://f21-fyrstikken.github.io/Fyrstikken/");
const ogImage = image ?? `${canonicalUrl.origin}${base}og-image.png`;
---

<html lang="no">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content="nb_NO" />
    <meta property="og:site_name" content="Fyrstikken" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl.href} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl.href} />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Hopp til hovedinnhold</a>
    <nav class="main-nav" aria-label="Hovednavigasjon">
      <div class="nav-content">
        <Link href={base} class="nav-link">Hjem</Link>
        <Link href={`${base}about/`} class="nav-link">Arrangementet</Link>
        <Link href={`${base}years/`} class="nav-link">Ã…r</Link>
      </div>
      <NightDay />
    </nav>
    <HeaderImg />
    <div class="container">
      <header class="page-header">
        <slot name="pageTitle" />
      </header>
      <main id="main-content" class="main-content">
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  .skip-link {
    position: absolute;
    top: -100%;
    left: 50%;
    transform: translateX(-50%);
    background: light-dark(var(--light-safir), var(--dark-safir));
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0 0 8px 8px;
    text-decoration: none;
    font-weight: 600;
    z-index: 1000;
    transition: top 0.2s ease;
  }

  .skip-link:focus {
    top: 0;
  }

  body {
    background: light-dark(var(--light-bakgrunn), var(--dark-bakgrunn));
    color: light-dark(var(--light-tekst), var(--dark-tekst));
    min-height: 100vh;
    font-family:
      system-ui,
      -apple-system,
      sans-serif;
    line-height: 1.6;
  }

  .main-nav {
    display: flex;
    justify-content: space-between;
    background: light-dark(var(--light-main), var(--dark-main));
    border-bottom: 2px solid light-dark(var(--light-ramme), var(--dark-ramme));
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nav-content {
    max-width: 1200px;
    padding: 0 2rem;
    display: flex;
    justify-content: start;
    gap: 2rem;
  }

  .nav-content :global(.nav-link) {
    text-decoration: none;
    color: inherit;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: background 0.2s;
  }

  .nav-content :global(.nav-link:hover) {
    background: light-dark(var(--light-tekstBoks), var(--dark-tekstBoks));
  }

  .nav-content :global(.nav-link[aria-current="page"]) {
    background: light-dark(var(--light-safir), var(--dark-safir));
    color: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .page-header {
    margin-bottom: 2rem;
  }

  .page-header :global(h1) {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: light-dark(var(--light-tekst), var(--dark-tekst));
  }

  .main-content {
    min-height: 60vh;
  }

  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }

    .nav-content {
      padding: 0 1rem;
      gap: 1rem;
    }

    .page-header :global(h1) {
      font-size: 2rem;
    }
  }
</style>
