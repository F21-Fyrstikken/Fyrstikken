---
import Link from "../components/Link.astro";
import "../css/global.css";
import "../css/typografi.css";
import HeaderImg from "../components/HeaderImg.astro";
import NightDay from "../components/NightDay.astro";
import type { IBaseLayoutProps } from "../types";

const { title = "Fyrstikken", description, image } = Astro.props as IBaseLayoutProps;
const base = import.meta.env.BASE_URL;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site ?? "https://f21-fyrstikken.github.io/Fyrstikken/");
const ogImage = image ?? `${canonicalUrl.origin}${base}og-image.png`;
---

<html lang="no">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content="nb_NO" />
    <meta property="og:site_name" content="Fyrstikken" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl.href} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl.href} />
  </head>
  <body>
    <a href="#main-content" class="skiplink">Hopp til hovedinnhold</a>
    <nav class="main-nav" aria-label="Hovednavigasjon">
      <div class="nav-content">
        <Link href={base} class="nav-link">Hjem</Link>
        <Link href={`${base}about/`} class="nav-link">Arrangementet</Link>
        <Link href={`${base}years/`} class="nav-link">År</Link>
      </div>
      <NightDay />
    </nav>
    <HeaderImg />
    <main class="main-content">
      <slot />
    </main>
    <footer>
        <p>Opphavsrett © <span id="copyright">{new Date().getFullYear().toString()}</span> Fyrstikk-komitèen. Alle rettigheter hevdet</p>
    </footer>
  </body>
</html>

<style>
  .skiplink {
    position: absolute;
    top: -100%;
    left: 50%;
    transform: translateX(-50%);
    background: light-dark(var(--light-safir), var(--dark-safir));
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0 0 8px 8px;
    text-decoration: none;
    font-weight: 600;
    z-index: 1000;
    transition: top 0.2s ease;
  }

  .skiplink:focus {
    top: 0;
  }

  body {
    background: light-dark(var(--light-bakgrunn), var(--dark-bakgrunn));
    color: light-dark(var(--light-tekst), var(--dark-tekst));
    min-height: 100vh;
    font-family:
      system-ui,
      -apple-system,
      sans-serif;
    line-height: 1.6;
  }

  .main-nav {
    display: flex;
    justify-content: space-between;
    background: light-dark(var(--light-main), var(--dark-main));
    border-bottom: 2px solid light-dark(var(--light-ramme), var(--dark-ramme));
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nav-content {
    max-width: 1200px;
    padding: 0 2rem;
    display: flex;
    justify-content: start;
    gap: 2rem;
  }

  .nav-content :global(.nav-link) {
    text-decoration: none;
    color: inherit;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: background 0.2s;
  }

  .nav-content :global(.nav-link:hover) {
    background: light-dark(var(--light-tekstBoks), var(--dark-tekstBoks));
  }

  .main-content {
    min-height: 60vh;
  }

  footer {
    position: fixed;
    bottom: 0;
    z-index: 20;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: light-dark(var(--light-tekstBoks), var(--dark-tekstBoks));
    border-top: 3px solid light-dark(var(--light-ramme), var(--dark-ramme));
    height: 3rem;
    width: 100%;
    box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.2);
  }

  @media (max-width: 768px) {
    .nav-content {
      padding: 0 1rem;
      gap: 1rem;
    }
  }

</style>
<script>
  import { getCopyRightYear } from "../lib/utils"; // import i script for å være client-side
  const year = getCopyRightYear();
  const copyright = document.getElementById("copyright") as unknown as HTMLParagraphElement;
  copyright.textContent = year.toString();
</script>