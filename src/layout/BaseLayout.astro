---
import "../styles/global.css";
import "../styles/typografi.css";
import "../styles/svgikoner.css";

interface Props {
  title: string;
  description: string;
}

const { title = "F21 IM", description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <nav>
      <a class="navKnapp" href="/" title="Hjem">
        <button class="svgIkon ikon35 navikonHjem"></button>
      </a>
      <div id="pageTitle">
        <slot name="pageTitle" />
      </div>
    </nav>
    <header>
      <slot name="pageTitle" />
    </header>
    <main>
      <slot name="content" />
      <slot />
    </main>
    <footer>
      <p>Opphavsrett © <span id="copyright">{new Date().getFullYear().toString()}</span> Marius Strøm Riseth. Alle rettigheter hevdet</p>
    </footer>
  </body>

  <style>
    button {
      margin-block: auto;
      /* margin-inline: 0.5rem; */
      width: 3.5rem;
      height: 3.5rem;
    }
    .navKnapp {
      margin-block: auto;
      height: 35px;
    }
    nav {
      position: fixed;
      top: 0;
      left: 0;
      display: grid;
      padding-inline: 1rem;
      grid-template-columns: auto 1fr auto auto;
      grid-template-rows: 1fr;
      background-color: light-dark(var(--light-tekstBoks), var(--dark-tekstBoks));
      border-bottom: 3px solid light-dark(var(--light-ramme), var(--dark-ramme));
      height: 55px;
      width: 100vw;
      width: 100dvw;
      z-index: 150;
      box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.2);
      transition: transform 0.3s ease-in-out;
    }
    .hide-nav {
      transform: translateY(-100%);
      transition: transform 0.3s ease-in-out;
    }
    #pageTitle {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    footer {
      position: fixed;
      bottom: 0;
      z-index: 20;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background-color: light-dark(var(--light-tekstBoks), var(--dark-tekstBoks));
      border-top: 3px solid light-dark(var(--light-ramme), var(--dark-ramme));
      height: 3rem;
      width: 100%;
      box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.2);
    }
  </style>
  <script>
    import { getCopyRightYear } from "../lib/utils"; // import i script for å være client-side
    const year = getCopyRightYear();
    const copyright = document.getElementById("copyright") as unknown as HTMLParagraphElement;
    copyright.textContent = year.toString();
  </script>
</html>



